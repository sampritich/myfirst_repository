<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<servlet>
		<servlet-name>AxisServlet</servlet-name>
		<servlet-class>org.apache.axis2.transport.http.AxisServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>MainController</servlet-name>
		<display-name>MainController</display-name>
		<description></description>
		<servlet-class>com.airline.controller.MainController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FlightDetailsController</servlet-name>
		<display-name>FlightDetailsController</display-name>
		<description></description>
		<servlet-class>com.airline.controller.FlightDetailsController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FlightController</servlet-name>
		<display-name>FlightController</display-name>
		<description></description>
		<servlet-class>com.airline.controller.FlightController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TicketGenerateController</servlet-name>
		<display-name>TicketGenerateController</display-name>
		<description></description>
		<servlet-class>com.airline.controller.TicketGenerateController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>TicketDisplayController</servlet-name>
		<display-name>TicketDisplayController</display-name>
		<description></description>
		<servlet-class>com.airline.controller.TicketDisplayController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MainController</servlet-name>
		<url-pattern>/MainController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FlightDetailsController</servlet-name>
		<url-pattern>/FlightDetailsController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FlightController</servlet-name>
		<url-pattern>/FlightController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TicketGenerateController</servlet-name>
		<url-pattern>/TicketGenerateController</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>TicketDisplayController</servlet-name>
		<url-pattern>/TicketDisplayController</url-pattern>
	</servlet-mapping>
	
</web-app>